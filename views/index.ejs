<!DOCTYPE html>
<html lang="ja">

<head>
  <!-- required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Twitch Stream Watcher">

  <!-- external stylesheets -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500;700&display=swap">

  <!-- internal stylesheets -->
  <link rel="stylesheet" href="/stylesheets/index.css">
  <title>Twitch Stream Watcher</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-dark">
      <a class="navbar-brand" href="/">Twitch Stream Watcher</a>
    </nav>
  </header>

  <main>
    <!-- live status -->
    <div class="py-5 text-center container">
      <% if (isLive == true) { %>
      <p class="status-text">$STREAMER is streaming now.</p>
      <% } else { %>
      <p class="status-text">$STREAMER is not streaming now.</p>
      <% } %>
    </div>

    <!-- video windows album -->
    <div class="album py-3">
      <div class="container-xl">
        <p class="intro-text text-center">Link to the latest stream</p>

        <!-- album cols -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
          <% for( let i = 0; i < videoes.length; i++ ) { %>
          <% var video = videoes[i] %>
          <div class="col py-1">
            <a href=<%- video.url %> target="_blank" rel="noopener noreferrer">
              <div class="card">

                <!-- thumbnail img -->
                <img src=<%- video.thumbnailUrl %> class="bd-placeholder-img card-img-top" width="100%" alt="thumbnail">
                <div class="card-body">

                  <!-- title -->
                  <p class="card-text title-text">【<%- video.title %>】</p>

                  <!-- display date -->
                  <% if (isLive == true && i == 0) { %>
                  <p class="card-text date-text">&nbsp;<%- video.startedAt %> 〜 Now</p>
                  <% } else { %>
                  <p class="card-text date-text">&nbsp;<%- video.startedAt %> 〜 <%- video.endedAt %> </p>
                  <% } %>
                </div>
              </div>
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous">
  </script>
</body>

</html>